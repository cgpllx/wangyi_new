<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/base_action_bar"
    android:layout_width="fill_parent"
    android:layout_height="60dp" >

    <ImageView
        android:id="@+id/base_action_bar_back"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:src="@drawable/home_icon2"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true" />

    <ImageView
        android:id="@+id/base_action_bar_back_divider"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:src="@drawable/actionbar_back_divider"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/base_action_bar_back"
        android:visibility="visible" />
    <ImageView
        android:id="@+id/base_action_bar_icon"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/base_action_bar_back_divider" />
</RelativeLayout>