<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <style name="MyactionBarStyle" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:background">@color/actionbarbackgroundcolor</item>
        <item name="background">@color/actionbarbackgroundcolor</item>
        <item name="android:titleTextStyle">@style/MyActionBarTitleText</item>
        <item name="titleTextStyle">@style/MyActionBarTitleText</item>
<!--         <item name="android:displayOptions">useLogo|showHome|showTitle</item> -->
<!--         <item name="displayOptions">useLogo|showHome|showTitle</item>  -->
    </style>

    <style name="MyActionBarTitleText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/actionbartextcolor</item>
    </style>
    <!-- Application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="vpiTabPageIndicatorStyle">@style/CustomTabPageIndicator</item>
    </style>

    <style name="MyActionBar" parent="@style/Theme.AppCompat.Light">

        <!-- <item name="android:background">@color/actionbarbackgroundcolor</item> -->
        <item name="vpiTabPageIndicatorStyle">@style/CustomTabPageIndicator</item>
        <item name="android:actionBarStyle">@style/MyactionBarStyle</item>
        <item name="actionBarStyle">@style/MyactionBarStyle</item>
        <!-- <item name="android:homeAsUpIndicator">@drawable/icon</item> -->
    </style>

    <style name="CustomTabPageIndicator" parent="Widget.TabPageIndicator">
        <item name="android:background">@drawable/main_tab_indicator_backgroundcolor</item>
        <item name="android:textAppearance">@style/CustomTabPageIndicator.Text</item>
        <item name="android:textColor">@drawable/main_tab_indicator_textcolor</item>
        <item name="android:textSize">18sp</item>
        <item name="android:divider">#FF0000</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:dividerPadding">20dp</item>
        <item name="android:showDividers">middle</item>
        <item name="android:paddingLeft">18dp</item>
        <item name="android:paddingRight">18dp</item>
        <item name="android:fadingEdge">horizontal</item>
        <item name="android:fadingEdgeLength">8dp</item>
    </style>

    <style name="CustomTabPageIndicator.Text" parent="android:TextAppearance.Medium">
        <item name="android:typeface">monospace</item>
    </style>

</resources>